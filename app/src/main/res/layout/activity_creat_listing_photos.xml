<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <include
        layout="@layout/appbar_create_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5dp"
        android:background="@color/shadow_line"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:background="@color/colorWhite"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/top_layout_createlisting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/login_text_grey"

                    />


                <LinearLayout
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_listing_gallery"
                            android:text="@string/listing_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_title"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"

                            />

                        <LinearLayout
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:background="@drawable/shape_dotted_reactangle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:background="@color/colorLightBlue"
                                android:layout_margin="@dimen/dimen_10dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_100dp">
                                <LinearLayout
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:background="@color/colorSkyBlue"
                                    android:layout_width="@dimen/dimen_200dp"
                                    android:layout_height="@dimen/dimen_40dp">
                                    <ImageView
                                        android:visibility="visible"
                                        android:src="@drawable/ic_upload_photo"
                                        android:layout_width="@dimen/dimen_20dp"
                                        android:layout_height="@dimen/dimen_20dp"/>
                                    <TextView
                                        android:layout_marginStart="@dimen/dimen_10sp"
                                        android:layout_marginLeft="@dimen/dimen_10sp"
                                        android:textSize="@dimen/dimen_15dp"
                                        android:textColor="@color/colorWhite"
                                        android:text="Upload Photos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_100dp">
                            <LinearLayout
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_marginEnd="@dimen/dimen_5dp"
                                android:background="@color/colorLightBlue"
                                android:layout_weight="1"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="@dimen/dimen_100dp">

                                <RelativeLayout
                                    android:background="@color/colorLightBlue"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_100dp">
                                    <ImageView
                                        android:layout_centerInParent="true"
                                        android:visibility="visible"
                                        android:src="@drawable/uploaded_photo_bg"
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"/>

                                </RelativeLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_marginEnd="@dimen/dimen_5dp"
                                android:layout_marginStart="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"

                                android:background="@color/colorLightBlue"

                                android:layout_weight="1"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="@dimen/dimen_100dp">
                                <RelativeLayout
                                    android:background="@color/colorLightBlue"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_100dp">
                                    <ImageView
                                        android:layout_centerInParent="true"
                                        android:visibility="visible"
                                        android:src="@drawable/uploaded_photo_bg"
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"/>

                                </RelativeLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:background="@color/colorLightBlue"

                                android:layout_weight="1"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="@dimen/dimen_100dp">
                                <RelativeLayout
                                    android:background="@color/colorLightBlue"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_100dp">
                                    <ImageView
                                        android:layout_centerInParent="true"
                                        android:visibility="visible"
                                        android:src="@drawable/uploaded_photo_bg"
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"/>

                                </RelativeLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="@string/listigng_gallery_breif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_title"
                        android:textStyle="italic"
                        android:textColor="@color/createlt_info"
                        />


                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/panggge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"/>

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/info_bg_middle"
                android:weightSum="3.8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"/>
                <Button
                    android:padding="@dimen/dimen_8dp"
                    android:drawableLeft="@drawable/ic_crt_lt_previus_bt"
                    android:id="@+id/bt_photos_previous"
                    android:textSize="@dimen/dimen_13sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/selector_bt_crt_lt_prv"
                    android:text="@string/previous"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"/>

                <Button

                    android:id="@+id/bt_photos_next"
                    android:padding="@dimen/dimen_8dp"
                    android:drawableRight="@drawable/ic_cl_next_bt"
                    android:textSize="@dimen/dimen_13sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/selector_button_createlist"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"/>

                <Button

                    android:textSize="@dimen/dimen_13sp"
                    android:id="@+id/bt_photos_save_exit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/selector_button_createlist"
                    android:text="@string/saveexit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>



    </ScrollView>



</LinearLayout>
