<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sign_up_bottom"
    tools:context=".view.activity.SignupActivity">
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="@dimen/dimen_25dp"
            android:paddingRight="@dimen/dimen_25dp"
            android:background="@drawable/bg_sign_up_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_logo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_back"
                        android:src="@drawable/ic_back"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"/>
                    <RelativeLayout
                        android:layout_toRightOf="@+id/iv_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginStart="@dimen/dimen_20dp"

                        android:src="@drawable/logo"
                        android:layout_width="250dp"
                        android:layout_height="80dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/rl_logo"
                    android:id="@+id/rl_sign"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp">
                    <TextView
                        android:id="@+id/tv_forget_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/forget_password"
                        android:textSize="20sp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <View
                        android:layout_below="@+id/tv_forget_password"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/underline"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:background="@color/colorDrawerBg"
                        app:layout_constraintTop_toBottomOf="@+id/tv_login"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/rl_sign"
                    android:id="@+id/rl_basic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/dimen_18sp"
                        android:text="@string/enter_your_acnt_email"
                        android:id="@+id/tv_enter_your_acnt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_below="@+id/tv_enter_your_acnt_email"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="@dimen/dimen_20dp"
                            android:textColor="@color/colorBlack"
                            android:layout_below="@+id/tv_enter_your_acnt_email"
                            android:textSize="15sp"
                            android:text="@string/email_address"
                            android:id="@+id/tv_email_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:id="@+id/et_email_address"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:background="@drawable/shape_reactangle_border"
                            android:layout_below="@+id/tv_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_40dp"/>

                        <TextView
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/dimen_50dp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/dimen_15sp"
                            android:text="@string/send_password_to_mail"
                            android:textColor="@color/color_register_text"
                            android:id="@+id/tv_send_password_to_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/bt_register"
                            android:layout_marginTop="@dimen/dimen_30dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_button"
                            android:textColor="@color/colorWhite"
                            android:textAllCaps="false"
                            android:text="@string/reset_password"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:elevation="100dp"
            android:background="@drawable/bg_sign_up_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1">

        </LinearLayout>

    </LinearLayout>










