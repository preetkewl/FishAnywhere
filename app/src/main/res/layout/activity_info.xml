<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_bg_middle"
    tools:context=".view.activity.InfoActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center"
        android:background="@drawable/info_bg_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_240dp">




    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_100dp"
        android:src="@drawable/logo"
         />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_infotagline"
        app:layout_constrainedWidth="true"
        android:text="@string/splash_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_15sp" />

    </LinearLayout>


<LinearLayout

    android:background="@drawable/info_bg_middle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_240dp">



        <TextView
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:id="@+id/tv_rucaptain"
            android:text="@string/rucaptain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"

            />
        <View
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="4dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/colorDrawerBg"

            />

    <TextView
        android:layout_gravity="center_horizontal"

       android:layout_marginLeft="@dimen/dimen_30dp"
       android:layout_marginRight="@dimen/dimen_30dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/tv_info_middle_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15sp"


        />

<LinearLayout
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_25dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/dimen_15sp"
        android:id="@+id/bt_login"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content"/>

    <Button
        android:visibility="gone"
        android:textSize="@dimen/dimen_15sp"
        android:id="@+id/bt_register"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button"
        android:text="@string/registerhere"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        />


</LinearLayout>

</LinearLayout>



        <LinearLayout
            android:background="@drawable/info_bg_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_250dp">



            <TextView
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:id="@+id/tv_bookingcharter"
                android:text="@string/bookingcharter_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"

                />
            <View
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="4dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@color/colorWhite"

                />

            <TextView

                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:text="@string/tv_info_bottom_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_15sp"


                />


            <Button
                android:id="@+id/bt_bookingnow"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@drawable/selector_button"
                android:text="@string/bookingnow"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/dimen_15sp" />


        </LinearLayout>








</LinearLayout>


    </ScrollView>
    </LinearLayout>

