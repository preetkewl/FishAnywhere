<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SignupActivity">


    <LinearLayout
        android:background="#1B6C96"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:id="@+id/rl_back_icon"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_back"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_back"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_below="@+id/rl_back_icon"
            android:id="@+id/rl_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp">

            <TextView

                android:id="@+id/tv_sendreviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sendreviews"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                />



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:background="@drawable/send_reviews_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"/>


    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/enter_your_customers_email_for_reviews"
            android:id="@+id/tv_enter_your_customers_email_for_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_below="@+id/tv_enter_your_customers_email_for_reviews"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:layout_marginTop="@dimen/dimen_20dp"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="@string/enter_email"
                android:id="@+id/tv_enter_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_enter_email"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/selector_edittext_createlisting"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <Button

                android:id="@+id/bt_submit"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_button_createlist"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:text="@string/submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>

