<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/shape_reactangle_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/colorBlack"
            android:text="Capt. John Smith"
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_below="@+id/tv_username"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_12dp"
            android:textColor="@color/colorGreen"
            android:text="USD $200"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/tv_price"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_below="@+id/tv_username"
            android:textColor="@color/colorDarkGray"

            android:textSize="@dimen/dimen_12dp"
            android:text=" - 8 hours"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_below="@+id/tv_time"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/dimen_12dp"
            android:text="Includes 2 Guests"
            android:id="@+id/tv_includes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_below="@+id/tv_includes"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/dimen_12dp"
            android:text="+ $100 per additional guest, Max 5 guest "
            android:id="@+id/tv_additional_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_toLeftOf="@+id/rl_duplicate"

            android:visibility="visible"
            android:id="@+id/rl_edit"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/selector_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp">
                <ImageView
                    android:src="@drawable/ic_edit_white"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"/>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_3dp"
                    android:textSize="@dimen/dimen_15dp"
                    android:textColor="@color/colorWhite"
                    android:text="Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:id="@+id/rl_duplicate"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/selector_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp">
                <ImageView
                    android:src="@drawable/ic_duplicate"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"/>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_3dp"
                    android:textSize="@dimen/dimen_15dp"
                    android:textColor="@color/colorWhite"
                    android:text="Duplicate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_below="@+id/rl_duplicate"


            android:visibility="visible"
            android:id="@+id/rl_delete"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/selector_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp">
                <ImageView
                    android:src="@drawable/ic_delet_white"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"/>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_3dp"
                    android:textSize="@dimen/dimen_15dp"
                    android:textColor="@color/colorWhite"
                    android:text="Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>