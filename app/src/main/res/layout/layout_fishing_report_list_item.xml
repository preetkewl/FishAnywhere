<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/dimen_8dp"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/shape_reactangle_border"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120dp">

    <LinearLayout
        android:padding="@dimen/dimen_5dp"
        android:gravity="center"
        android:background="@color/colorLightBlue"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_gallery"
            android:padding="@dimen/dimen_5dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:src="@drawable/uploaded_photo_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:layout_weight="1.2"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/colorBlack"
            android:text="@string/here_is_our_journey"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_below="@+id/tv_time"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/dimen_12dp"
            android:text="Includes 2 Guests"
            android:id="@+id/tv_includes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/dimen_12dp"
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorSkyBlue"
                android:textSize="@dimen/dimen_12dp"
                android:id="@+id/see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dimen_10dp"
        android:weightSum="3.6"
        android:orientation="vertical"
        android:layout_weight=".8"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight=".2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_button"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/ic_edit_white"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:textSize="@dimen/dimen_15dp"
                android:textColor="@color/colorWhite"
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight=".2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_delete"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/ic_delet_white"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:textSize="@dimen/dimen_15dp"
                android:textColor="@color/colorWhite"
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight=".2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_button"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_view_details"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:textSize="@dimen/dimen_15dp"
                android:textColor="@color/colorWhite"
                android:text="@string/viewdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

