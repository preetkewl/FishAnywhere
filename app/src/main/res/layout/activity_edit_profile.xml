<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SignupActivity">


    <LinearLayout
        android:background="#1B6C96"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:id="@+id/rl_back_icon"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_back"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_back"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_below="@+id/rl_back_icon"
            android:id="@+id/rl_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp">

            <TextView

                android:id="@+id/tv_sendreviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                />



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:background="@drawable/send_reviews_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"/>


    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_below="@+id/tv_enter_your_customers_email_for_reviews"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_horizontal"
                android:textSize="@dimen/dimen_18sp"
                android:text="@string/info_to_update"
                android:id="@+id/tv_enter_your_customers_email_for_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="@string/first_name"
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_10dp"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/et_first_name"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/selector_edittext_createlisting"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="@string/last_name"
                android:id="@+id/tv_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText

                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_10dp"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/et_last_name"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/selector_edittext_createlisting"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="@string/charterandguideservicename"
                android:id="@+id/tv_charter_guideservicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText

                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_10dp"
                android:inputType="text"
                android:maxLines="1"

                android:id="@+id/et_charter_guideservicename"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/selector_edittext_createlisting"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/dimen_18sp"
                    android:text="@string/send_money"
                    android:id="@+id/tv_send_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:text="@string/tell_us_to_send_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:id="@+id/groupradio"
                    android:layout_marginLeft="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <!-- In RadioGroup create the 1 Radio Button-->
                    <!-- like this we will add some more Radio Button-->
                    <RadioButton
                        android:checked="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_paypal"
                        android:text="@string/paypal"
                        android:textSize="15sp"/>

                    <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_manual"
                        android:text="@string/manual"
                        android:textSize="15sp"/>

                    <RadioButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_credit_card"
                        android:text="@string/credit_card"
                        android:textSize="15sp"/>

                </RadioGroup>
                <TextView
                    android:visibility="gone"
                    android:background="@color/color_gray_bg"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:text="@string/credit_card_text"
                    android:id="@+id/tv_radio_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:visibility="visible"
                     android:layout_marginTop="@dimen/dimen_10dp"
                    android:id="@+id/ll_paypal_email"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_pay_pal_email"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:text="@string/pay_pal_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText

                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:id="@+id/et_pay_pal_email"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:background="@drawable/selector_edittext_createlisting"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>


            </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:id="@+id/ll_overnight"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_overnght"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:text="@string/company_mailing_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText

                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:id="@+id/et_company_mailing_address"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@drawable/selector_edittext_createlisting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/dimen_18sp"
                        android:text="@string/charter_company_details"
                        android:id="@+id/tv_charter_company_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="15sp"
                        android:text="@string/contact_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:text="@string/website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText

                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:id="@+id/et_website"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@drawable/selector_edittext_createlisting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:text="@string/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText

                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:id="@+id/et_phone_number"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@drawable/selector_edittext_createlisting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:text="@string/mobile_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText

                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:id="@+id/et_mobile_phone_number"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@drawable/selector_edittext_createlisting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="15sp"
                            android:text="@string/additional_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:text="@string/established"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <EditText

                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:inputType="number"
                            android:maxLines="1"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:id="@+id/et_month"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:background="@drawable/selector_edittext_createlisting"
                            android:layout_width="0dp"
                            android:layout_height="45dp"/>
                            <EditText

                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:maxLines="1"
                                android:inputType="number"
                                android:layout_marginStart="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:layout_weight="1"
                                android:id="@+id/et_year"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:background="@drawable/selector_edittext_createlisting"
                                android:layout_width="0dp"
                                android:layout_height="45dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:text="@string/aggree_consent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <CheckBox
                            android:text="@string/yes"
                            android:id="@+id/cb_aggree_consent"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:background="@drawable/selector_edittext_createlisting"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>

                        <TextView
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:text="@string/aggree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <CheckBox
                            android:text="@string/yes"
                            android:id="@+id/cb_aggree"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:background="@drawable/selector_edittext_createlisting"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>

                        <TextView
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:text="@string/leagl_entity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioGroup
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/rg_legal_entity"
                            android:layout_marginLeft="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <!-- In RadioGroup create the 1 Radio Button-->
                            <!-- like this we will add some more Radio Button-->
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_legal_entity_yes"
                                android:text="@string/yes"
                                android:textSize="15sp"/>

                            <RadioButton
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_legal_entity_no"
                                android:text="@string/no"
                                android:textSize="15sp"/>
                        </RadioGroup>

                        <TextView
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:text="@string/insuarance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioGroup
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/rg_insurance"
                            android:layout_marginLeft="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <!-- In RadioGroup create the 1 Radio Button-->
                            <!-- like this we will add some more Radio Button-->
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_insurance_yes"
                                android:text="@string/yes"
                                android:textSize="15sp"/>

                            <RadioButton
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_insurance_no"
                                android:text="@string/no"
                                android:textSize="15sp"/>
                        </RadioGroup>


                        <TextView
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:text="@string/license_permit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioGroup
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/rg_license_permit"
                            android:layout_marginLeft="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <!-- In RadioGroup create the 1 Radio Button-->
                            <!-- like this we will add some more Radio Button-->
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_license_permit_yes"
                                android:text="@string/yes"
                                android:textSize="15sp"/>
                            <RadioButton
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_license_permit_no"
                                android:text="@string/no"
                                android:textSize="15sp"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>


            <Button

                android:id="@+id/bt_submit"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_button_createlist"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:text="@string/submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        </LinearLayout>>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>

