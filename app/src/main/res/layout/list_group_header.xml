<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorDrawerBg"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:id="@+id/rl_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:src="@drawable/ic_home_d"
        android:layout_centerVertical="true"
        android:id="@+id/iv_menu_image"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"/>
    <TextView
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:text="Home"
        android:layout_toRightOf="@+id/iv_menu_image"
        android:id="@+id/lblListHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_marginStart="@dimen/dimen_14dp"
        android:layout_marginEnd="@dimen/dimen_14dp"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_below="@+id/rl_heading"
        android:background="@drawable/d_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>